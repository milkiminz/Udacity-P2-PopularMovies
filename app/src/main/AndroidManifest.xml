<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="almanac.milki.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Popular Movies">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetail"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".favourite"
            android:label="@string/title_activity_favourite"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".favourite_detail"
            android:label="@string/title_activity_favourite_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".favourite_poster"
            android:label="@string/title_activity_favourite_poster"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Transition"
            android:label="@string/title_activity_transition"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>